category:            Game
build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs: src
  exposed-modules: Ratslap.Card, Ratslap.Game, Ratslap.Deck
  build-depends:        base ==4.7.*

executable ratslap
  main-is: src/Main.hs
  build-depends:        base ==4.7.*

test-suite Tests
  hs-source-dirs: test
  main-is: Spec.hs
  other-modules: Spec
  type: exitcode-stdio-1.0
  build-depends:        base ==4.7.*
                        , Cabal >= 1.16.0
                        , ratslap
                        , QuickCheck
                        , tasty
                        , tasty-quickcheck
                        , hspec2
